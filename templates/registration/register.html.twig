{% extends 'base.html.twig' %}

{% block titre %}
	<title>
		Register
	</title>
{% endblock %}


{% block body %}
    <div style="width:100%; magin:auto;">
            <div class="range range-xs-center range-sm-left">
                <div class="cell-xs-10 cell-lg-4" style = "width:100% ; margin:auto;">
                <div style="width:5em; height:1em;"></div>
                <h2>Formulaire d'inscription</h2>
                <hr class="divider divider-lg bg-primary hr-sm-left-0" style="width:70% ; margin-left:4em;">
                <div class="offset-top-50">
                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            {{ form_widget(registrationForm.username,{'attr':{ 'placeholder': ' Votre login' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.username)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.email,{'attr':{ 'placeholder': ' Votre Email' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.email)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.password,{'attr':{ 'placeholder': ' Votre Mot de Passe' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.password)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.confirm_password,{'attr':{ 'placeholder': ' Confirmer Votre Mot de Passe' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.confirm_password)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.prenom,{'attr':{ 'placeholder': ' Votre Prenom' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.prenom)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.nom,{'attr':{ 'placeholder': ' Votre Nom' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.nom)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.numrue,{'attr':{ 'placeholder': ' N° de votre rue' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.numrue)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.nomrue,{'attr':{ 'placeholder': ' Nom de votre rue' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.nomrue)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.codepostal,{'attr':{ 'placeholder': ' Votre Code postal' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.codepostal)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.ville,{'attr':{ 'placeholder': ' Votre Ville' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.ville)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.pays,{'attr':{ 'placeholder': ' Votre pays' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.pays)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.nationality,{'attr':{ 'placeholder': ' Votre Nationalité' ,'class':'form-control'}})}}
                            {{ form_errors(registrationForm.nationality)}}
                        </div>
                        {{ form_row(registrationForm.agreeTerms) }}
                        <button type="submit" class = "btn btn-sm btn-primary"> Envoyer </button>

                        <div class ="alert alert-danger" style="opacity:0; height:5em;">
                            {{ form_row(registrationForm.createdAt) }}
                        </div> 
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div> 
 

{% endblock %} 
